{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "linebreak-style": [true, "LF"],
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "quotemark": [true, "single"]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}